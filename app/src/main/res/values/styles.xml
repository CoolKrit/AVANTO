<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Name -->
    <style name="AVANTO">
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:fontFamily">@font/sticknobills_semibold</item>
    </style>

    <!-- TextInputLayout_TextField -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>

        <item name="startIconTint">?attr/colorOnPrimary</item>
        <item name="endIconTint">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/app_hint</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>

    <!-- BottomSheetDialog -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="background">@color/transparent</item>
        <item name="behavior_peekHeight">512dp</item>
    </style>

    <style name="MyRipple">
        <item name="colorControlHighlight">@color/app_selected</item>
        <item name="android:background">@color/app_hint</item>
    </style>
</resources>