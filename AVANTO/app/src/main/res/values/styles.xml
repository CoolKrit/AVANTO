<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Name -->
    <style name="AVANTO">
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textColor">@color/app_unselected</item>
        <item name="android:fontFamily">@font/sticknobills_semibold</item>
    </style>

    <!-- TextInputLayout_TextField -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/app_selected</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>

        <item name="startIconTint">@color/app_unselected</item>
        <item name="endIconTint">@color/app_unselected</item>
        <item name="android:textColorHint">@color/app_unselected</item>
        <item name="hintTextColor">@color/app_selected</item>
    </style>
</resources>